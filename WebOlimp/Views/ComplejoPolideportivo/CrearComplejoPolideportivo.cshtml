@{
    ViewBag.Title = "CrearComplejoPolideportivo";
    Layout = "~/Views/Shared/MasterGeneral.cshtml";

}

@Styles.Render("~/Content/admin/vendor/select2")

<div class="col-lg-12">
    <div class="card m-b-30">
        <div class="card-body">

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="txtNombreSede">Nombre Complejo Polideportivo</label>
                    <input type="text" class="form-control" id="txtNombrePoli" autocomplete="off">
                </div>
                <div class="form-group col-md-6">
                    <label for="txtNombreSede">Sede </label>
                    <select class="form-control selectpicker m-0" id="selSedes" data-actions-box="true" aria-label="Nombre" aria-describedby="basic-addon2" data-type="select">
                        <option value="-1">Seleccione</option>
                    </select>
                    
                </div>
                <div class="form-group col-md-6">
                    <label for="selEstado">Estado</label>
                    <select id="selEstado" class="form-control">
                        <option value="-1">Seleccione estado</option>
                        <option value="1">Activo</option>
                        <option value="0">Inactivo</option>
                    </select>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-10">
                    <button type="button" class="btn btn-outline-success float-right" id="btnRegistrar">
                        <i class="mdi mdi-content-save" aria-hidden="true"></i> Registrar
                    </button>
                </div>
                <div class="form-group col-md-2">
                    <button type="button" class="btn btn-danger" id="btnCancelar">
                        <i class="fa fa-times-rectangle-o " aria-hidden="true"></i> Cancelar
                    </button>
                </div>


            </div>


        </div>
    </div>
</div>




@section scripts {
    @Styles.Render("~/Content/bootstrap/select")


    @Scripts.Render("~/bundles/bootstrap/select")


    @Scripts.Render("~/bundles/admin/vendor/select2")
    @Scripts.Render("~/bundles/crearComplejoPolideportivo")


}