@{
    ViewBag.Title = "ListaComplejoPolideportivo";
    Layout = "~/Views/Shared/MasterGeneral.cshtml";
}



@section stylesowner {
    @Styles.Render("~/Content/datatablesjs")

}

<div class="col-lg-12">
    <div class="card m-b-30">

        <div class="card-body">
            <div class="form-row">
                <div class="form-group col-lg-3 col-md-4 col-sm-5">
                    <div id="accordion-paneled-area" class="panel-group accordion-panel">
                        <div class="panel open ">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion-paneled-area" href="#collapseRol">
                                        Sedes
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseRol" class="panel-collapse in collapse show">
                                <div class="panel-body">
                                    <div class="input-group">
                                        <select class="form-control selectpicker m-0" id="selSedes" data-actions-box="true" aria-label="Nombre" aria-describedby="basic-addon2" data-type="select">
                                            <option value="-1">Seleccione</option>
                                        </select>

                                        <div class="input-group-append">
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>&nbsp;&nbsp;&nbsp;
                <div class="form-group col-lg-3 col-md-4 col-sm-5 mt-2">
                    <label for="txtNombreComplejoPolideportivo">Nombre Complejo Polideportivo</label>
                    <input type="text" class="form-control mt-3" id="txtNombreComplejoPolideportivo" autocomplete="off">
                </div>
                <div class="form-group col-lg-2 col-md-4 col-sm-5 mt-4">
                    <button type="button" class="btn btn-primary mt-md-0 mt-sm-0 mt-lg-4 mt-md-4"
                            id="btnBuscar">
                        <i class="fa fa-search" aria-hidden="true"></i> Buscar
                    </button>
                </div>

                <div class="form-group col-lg-2 col-md-4 col-sm-5 mt-4 lg-right">
                    <button type="button" class="btn btn-outline-primary float-lg-right float-md-right mt-md-0 mt-sm-0 mt-lg-4 mt-md-4" id="btnAgregar">
                        <i class="fa fa-plus" aria-hidden="true"></i> Crear
                    </button>
                </div>

            </div>

        </div>
    </div>
</div>

<div class="col-lg-12 mt-3">
    <div class="card m-b-30">
        <div class="card-body">
            <div class="table-responsive">
                <table id="TablaDatosComplejoPolideportivo" class="display table table-striped table-bordered w-100">
                    <thead>
                        <tr>
                            <th class="text-center">Código</th>
                            <th class="text-center">Nombre Complejo Polidep</th>
                            <th class="text-center">Nombre Sede</th>
                            <th class="text-center">Estado</th>
                            <th class="text-center">Fecha modificación</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="conten_table" class="text-center"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Styles.Render("~/Content/bootstrap/select")


    @Scripts.Render("~/bundles/bootstrap/select")

    @Scripts.Render("~/bundles/datatablesjs")
    @Scripts.Render("~/bundles/datatablesjs/responsive")
    @Scripts.Render("~/bundles/listaComplejoPolideportivo")
}


